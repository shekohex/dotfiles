# Alias
alias vim=$HOME/.local/bin/lvim # LunarVim (Neovim)
alias nvim=$HOME/.local/bin/lvim
alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias :q=exit # I like vim :)
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias cls=clear
alias cat=bat
alias ls="exa -lhm@ --git -s type --group-directories-first"
alias hexdump=hx
alias htop=btm
alias du=dust
alias http=xt
